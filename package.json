{
  "name": "@happyvertical/svelte",
  "version": "0.18.11",
  "description": "Svelte 5 component library for the HappyVertical ecosystem",
  "author": "Will Griffin <willgriffin@gmail.com>",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./Button": {
      "types": "./dist/components/ui/Button.svelte.d.ts",
      "svelte": "./dist/components/ui/Button.svelte",
      "default": "./dist/components/ui/Button.svelte"
    },
    "./Card": {
      "types": "./dist/components/ui/Card.svelte.d.ts",
      "svelte": "./dist/components/ui/Card.svelte",
      "default": "./dist/components/ui/Card.svelte"
    },
    "./Badge": {
      "types": "./dist/components/ui/Badge.svelte.d.ts",
      "svelte": "./dist/components/ui/Badge.svelte",
      "default": "./dist/components/ui/Badge.svelte"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/happyvertical/svelte.git"
  },
  "bugs": {
    "url": "https://github.com/happyvertical/svelte/issues"
  },
  "homepage": "https://github.com/happyvertical/svelte#readme",
  "license": "MIT",
  "scripts": {
    "prepare": "git rev-parse --git-dir > /dev/null 2>&1 && lefthook install || echo 'Skipping lefthook install'",
    "dev": "vite dev",
    "dev:docs": "vite dev",
    "dev:test": "vite --mode test",
    "build": "vite build --mode lib && svelte-package",
    "build:docs": "vite build",
    "build:watch": "vite build --watch --mode lib",
    "preview": "vite preview",
    "test": "npx vitest run --passWithNoTests",
    "test:watch": "vitest",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "clean": "rm -rf dist build .svelte-kit",
    "prepublishOnly": "npm run build",
    "format": "biome check --write .",
    "format-check": "biome ci --diagnostic-level=error .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "typecheck": "tsc --noEmit",
    "changeset:auto": "npx tsx scripts/auto-changeset.ts",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish"
  },
  "dependencies": {
    "svelte": "^5.18.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/svelte": "^8.6.14",
    "@storybook/svelte-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.49.2",
    "@sveltejs/package": "^2.3.9",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@types/node": "^24.0.0",
    "lefthook": "^2.0.9",
    "mdsvex": "^0.12.6",
    "shiki": "^3.20.0",
    "storybook": "^8.6.14",
    "svelte-check": "^4.0.0",
    "tslib": "^2.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "pnpm@10.25.0"
}
