{
  "name": "@happyvertical/svelte",
  "version": "0.17.37",
  "description": "Svelte 5 component library for the HappyVertical ecosystem",
  "author": "Will Griffin <willgriffin@gmail.com>",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./Button": {
      "types": "./dist/components/ui/Button.svelte.d.ts",
      "svelte": "./dist/components/ui/Button.svelte",
      "default": "./dist/components/ui/Button.svelte"
    },
    "./Card": {
      "types": "./dist/components/ui/Card.svelte.d.ts",
      "svelte": "./dist/components/ui/Card.svelte",
      "default": "./dist/components/ui/Card.svelte"
    },
    "./Badge": {
      "types": "./dist/components/ui/Badge.svelte.d.ts",
      "svelte": "./dist/components/ui/Badge.svelte",
      "default": "./dist/components/ui/Badge.svelte"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/happyvertical/svelte.git"
  },
  "bugs": {
    "url": "https://github.com/happyvertical/svelte/issues"
  },
  "homepage": "https://github.com/happyvertical/svelte#readme",
  "license": "MIT",
  "scripts": {
    "dev": "vite --mode test",
    "dev:test": "vite --mode test",
    "build": "vite build && svelte-package",
    "build:watch": "vite build --watch",
    "preview": "vite preview",
    "test": "npx vitest run --passWithNoTests",
    "test:watch": "vitest",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "svelte": "^5.18.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/svelte": "^8.6.14",
    "@storybook/svelte-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@sveltejs/package": "^2.3.9",
    "@sveltejs/vite-plugin-svelte": "^5.0.2",
    "@types/node": "^24.0.0",
    "storybook": "^8.6.14",
    "svelte-check": "^4.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  }
}
